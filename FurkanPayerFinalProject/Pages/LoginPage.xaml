<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FurkanPayerFinalProject.Pages.LoginPage"
             Title="Login">
    <ScrollView>
        <StackLayout Padding="20" Spacing="25" VerticalOptions="Center">
            <Entry Placeholder="Email" Keyboard="Email" x:Name="EmailEntry"/>

            <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry"/>

            <Button Text="Login" x:Name="LoginButton" Clicked="LoginButton_Clicked"/>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label Text="Don't have an account yet?" TextColor="Blue" FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>