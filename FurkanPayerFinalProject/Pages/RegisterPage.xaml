<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FurkanPayerFinalProject.Pages.RegisterPage"
             Title="Register">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <!-- Name -->
            <Entry Placeholder="First Name" x:Name="FirstNameEntry"/>
            <Entry Placeholder="Last Name" x:Name="LastNameEntry"/>

            <!-- Email -->
            <Entry Placeholder="Email" Keyboard="Email" x:Name="EmailEntry"/>

            <!-- Phone -->
            <Entry Placeholder="Phone" Keyboard="Telephone" x:Name="PhoneEntry"/>

            <!-- Gender -->
            <Label Text="Gender" FontSize="Medium" Margin="0,10,0,0"/>
            <Frame BorderColor="Gray" Padding="10,5">
                <Label x:Name="SelectedGender" Text="Select Gender" TextColor="Gray" />
            </Frame>
            <CollectionView x:Name="GenderDropDown" IsVisible="False" SelectionMode="Single" BackgroundColor="White">
                <CollectionView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Male</x:String>
                        <x:String>Female</x:String>
                        <x:String>Other</x:String>
                    </x:Array>
                </CollectionView.ItemsSource>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Label Text="{Binding}" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Date of Birth -->
            <DatePicker x:Name="DateOfBirthPicker"/>

            <!-- Register Button -->
            <Button Text="Register" x:Name="RegisterButton"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
    