<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FurkanPayerFinalProject.Pages.CriteriaPage"
             Title="Visa Selection"
             BackgroundColor="#F8F7FA">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            <!-- Spacing artırıldı -->

            <!-- Başlık ve Açıklama -->
            <VerticalStackLayout Padding="20" Spacing="10" HorizontalOptions="Center">
                <!-- Ana Başlık -->
                <Label Text="Vize Belge Kontrolü"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#000000"
                       HorizontalOptions="Center" />

                <!-- Alt Başlık -->
                <Label Text="Vize başvurunuz için gerekli belgeleri öğrenin"
                       FontSize="16"
                       TextColor="#666666"
                       HorizontalOptions="Center" />

                <!-- Aşama Göstergesi -->
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="0,20,0,0">
                    <!-- Adım 1 -->
                    <Frame BackgroundColor="#7E3AF2"
                           CornerRadius="20"
                           HeightRequest="40"
                           WidthRequest="40"
                           Padding="0"
                           HasShadow="False">
                        <Label Text="1"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               FontSize="16"
                               FontAttributes="Bold" />
                    </Frame>
                    <!-- Ok -->
                    <Label Text="→"
                           FontSize="18"
                           VerticalOptions="Center"
                           TextColor="#7E3AF2" />
                    <!-- Adım 2 -->
                    <Frame BackgroundColor="#E5E7EB"
                           CornerRadius="20"
                           HeightRequest="40"
                           WidthRequest="40"
                           Padding="0"
                           HasShadow="False">
                        <Label Text="2"
                               TextColor="#666666"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               FontSize="16"
                               FontAttributes="Bold" />
                    </Frame>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Your Country Picker -->
            <VerticalStackLayout>
                <Label Text="Your Country"
                       FontSize="16"
                       TextColor="#666666" />
                <Picker x:Name="FromCountryPicker"
                        Title="Select Your Country"
                        TextColor="Black"
                        BackgroundColor="White"
                        FontSize="16"
                        SelectedIndexChanged="OnPickerChanged">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Turkey</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </VerticalStackLayout>

            <!-- Destination Country Picker -->
            <VerticalStackLayout>
                <Label Text="Destination Country"
                       FontSize="16"
                       TextColor="#666666" />
                <Picker x:Name="ToCountryPicker"
                        Title="Select Destination"
                        TextColor="Black"
                        BackgroundColor="White"
                        FontSize="16"
                        SelectedIndexChanged="OnPickerChanged">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Germany</x:String>
                            <x:String>United States of America</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </VerticalStackLayout>

            <!-- Visa Type Picker -->
            <VerticalStackLayout>
                <Label Text="Visa Type"
                       FontSize="16"
                       TextColor="#666666" />
                <Picker x:Name="VisaTypePicker"
                        Title="Select Visa Type"
                        TextColor="Black"
                        BackgroundColor="White"
                        FontSize="16"
                        SelectedIndexChanged="OnPickerChanged">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Tourist</x:String>
                            <x:String>Student</x:String>
                            <x:String>Business</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </VerticalStackLayout>

            <!-- Duration Picker -->
            <VerticalStackLayout>
                <Label Text="Duration"
                       FontSize="16"
                       TextColor="#666666" />
                <Picker x:Name="DurationPicker"
                        Title="Select Duration"
                        TextColor="Black"
                        BackgroundColor="White"
                        FontSize="16"
                        SelectedIndexChanged="OnPickerChanged">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Short Term</x:String>
                            <x:String>Long Term</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </VerticalStackLayout>

            <!-- Applicant Type Picker -->
            <VerticalStackLayout>
                <Label Text="Applicant Type"
                       FontSize="16"
                       TextColor="#666666" />
                <Picker x:Name="ApplicantTypePicker"
                        Title="Select Applicant Type"
                        TextColor="Black"
                        BackgroundColor="White"
                        FontSize="16"
                        SelectedIndexChanged="OnPickerChanged">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Employed</x:String>
                            <x:String>Self-Employed</x:String>
                            <x:String>Student</x:String>
                            <x:String>Retired</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </VerticalStackLayout>

            <!-- Show Documents Button -->
            <Button x:Name="ShowDocumentsButton"
                    Text="View Documents"
                    IsEnabled="False"
                    BackgroundColor="#7E3AF2"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    Clicked="OnShowDocumentsClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
