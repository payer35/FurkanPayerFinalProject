<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FurkanPayerFinalProject.Pages.FinalDetailsPage"
             BackgroundColor="#F8F7FA"
             NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            <!-- Header Section -->
            <VerticalStackLayout Padding="20" Spacing="10" HorizontalOptions="Center">
                <Label Text="Document Requirements" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="#7E3AF2"
                       HorizontalOptions="Center"/>
                <Label Text="Review your visa details and required documents"
                       FontSize="16"
                       TextColor="#666666"
                       HorizontalOptions="Center"/>

                <!-- Progress Indicators -->
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="0,20,0,0">
                    <Frame BackgroundColor="#E5E7EB"
                           CornerRadius="20"
                           HeightRequest="40"
                           WidthRequest="40"
                           Padding="0"
                           HasShadow="False">
                        <Label Text="1"
                               TextColor="#666666"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               FontSize="16"
                               FontAttributes="Bold"/>
                    </Frame>
                    <Label Text="→"
                           FontSize="18"
                           VerticalOptions="Center"
                           TextColor="#7E3AF2"/>
                    <Frame BackgroundColor="#7E3AF2"
                           CornerRadius="20"
                           HeightRequest="40"
                           WidthRequest="40"
                           Padding="0"
                           HasShadow="False">
                        <Label Text="2"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               FontSize="16"
                               FontAttributes="Bold"/>
                    </Frame>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Fee Details -->
            <VerticalStackLayout>
                <Frame Padding="15" 
                       BackgroundColor="White"
                       CornerRadius="10"
                       HasShadow="False"
                       BorderColor="#E5E7EB">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Visa Fee" 
                               FontSize="16" 
                               TextColor="#666666"/>
                        <Label x:Name="FeeLabel" 
                               FontSize="20" 
                               TextColor="#7E3AF2"
                               FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- Processing Time Details -->
            <VerticalStackLayout>
                <Frame Padding="15" 
                       BackgroundColor="White"
                       CornerRadius="10"
                       HasShadow="False"
                       BorderColor="#E5E7EB">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Processing Time" 
                               FontSize="16" 
                               TextColor="#666666"/>
                        <Label x:Name="ProcessingTimeLabel" 
                               FontSize="20" 
                               TextColor="#7E3AF2"
                               FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- Required Documents Section -->
            <VerticalStackLayout>
                <Frame Padding="15" 
                       BackgroundColor="White"
                       CornerRadius="10"
                       HasShadow="False"
                       BorderColor="#E5E7EB">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Required Documents" 
                               FontSize="16" 
                               TextColor="#666666"/>
                        <CollectionView x:Name="DocumentsCollectionView">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="0,10" ColumnSpacing="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0" 
                                                 VerticalOptions="Center"
                                                 Color="#7E3AF2"/>

                                        <VerticalStackLayout Grid.Column="1" 
                                                           Spacing="5">
                                            <Label Text="{Binding Name}" 
                                                   FontAttributes="Bold"
                                                   TextColor="#1F2937"/>
                                            <Label Text="{Binding Details}" 
                                                   FontSize="14" 
                                                   TextColor="#666666"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- Back Button -->
            <Button Text="Back to Criteria"
                    Clicked="OnBackButtonClicked"
                    BackgroundColor="#7E3AF2"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>