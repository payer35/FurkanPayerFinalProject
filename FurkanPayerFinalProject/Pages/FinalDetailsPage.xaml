<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FurkanPayerFinalProject.Pages.FinalDetailsPage"
             Title="Visa Details">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <Label Text="Visa Fee" FontAttributes="Bold" FontSize="Medium" />
            <Label x:Name="FeeLabel" FontSize="Large" TextColor="Green" />

            <Label Text="Processing Time" FontAttributes="Bold" FontSize="Medium" Margin="0,10,0,0" />
            <Label x:Name="ProcessingTimeLabel" FontSize="Large" TextColor="Blue" />

            <Label Text="Required Documents" FontAttributes="Bold" FontSize="Medium" Margin="0,10,0,0" />
            <CollectionView x:Name="DocumentsCollectionView" Margin="0,5,0,20">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" Spacing="10" Padding="10">
                            <CheckBox />
                            <StackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" />
                                <Label Text="{Binding Details}" FontSize="12" TextColor="Gray" />
                            </StackLayout>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>

